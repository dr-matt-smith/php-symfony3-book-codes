{% set default_colours = 'no' %}

{% set colours = app.session.get('colours') %}

{% if colours is null %}
    {% set default_colours = 'yes' %}
    {% set colours = {
    'foreground': 'black',
    'background': 'yellow'
    }

    %}

{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>MGW - {% block pageTitle %}{% endblock %}</title>

        <style>
            @import '/css/flash.css';

            body {
                color: {{ colours.foreground }};
                background-color: {{ colours['background'] }};
            }
        </style>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>


    <ul>
        <li>
            <a href="{{ path('product_index') }}">list of PRODUCTS</a>

        </li>

        <li>
            <a href="{{ path('students_list') }}">list of students</a>
        </li>

    </ul>

    <hr>
        {% block body %}
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
